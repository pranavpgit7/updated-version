<div class="container mb-150 ml-180 mt-20">
    <section class="">
      <div class="col-md-8 box ">
      <div class="container d-flex justify-content-center">
        <div class="row w-75 mt-5">
          <div class="col-md-12">
            <h2 class="text-center">Edit Banner</h2>
            <form action="/admin/edit-banner?editbanner=<%=banner._id%>" method="POST" enctype="multipart/form-data">
              <label for="">Title</label>
              <input type="text" name="title" class="form-control" value="<%=banner.title%>" required />
              <br>
              <label for="">Main Description</label>
              <input type="text" name="mainDescription" class="form-control" id="mainDescription" value="<%=banner.mainDescription%>" required />
              <br>
              <label for="">Sub Description</label>
              <input type="text" name="subDescription" class="form-control"  id="subDescription" value="<%=banner.subDescription%>" required />
              <br>
              <label for="">Category Offer</label>
              <input type="text" name="categoryOffer" class="form-control" id="categoryOffer" value="<%=banner.categoryOffer%>" required />
              <br>
              <label for="">Link</label>
              <input type="text" name="link" class="form-control" value="<%=banner.link%>" required />
              <br>
              <label for="">Image</label>
              <img class="w-25 h-25" src="/productimages/<%=banner?.image%>" id="imgView" alt="" required>
              <input type="file" name="image" class="form-control" required onchange="viewImage(event)" accept=".jpg, .jpeg, .png, .avif" />
              <br>
              <button type="submit" class="btn btn-info text-white mt-4">Submit</button>
            </form>
          </div>
        </div>
      </div>
    </div>
    </section>
  </div>
  <br>
  <br>
  <br>
  
  <script>
     function viewImage(event) {
        selectedFile = event.target.files[0];
        document.getElementById('imgView').src = URL.createObjectURL(selectedFile);
      }
  
  </script>
  
  <style>
    body {
      font-family: Arial, sans-serif;
    }
  
    h1 {
      text-align: center;
    }
  
  
    label {
      display: block;
      margin-bottom: 5px;
    }
  </style>