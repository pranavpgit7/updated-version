  <script>
    function addtocart(proId) {
      if(!proId){
        
          window.location.href = '/login';
        
      }else{
      $.ajax({
        url: '/add-to-cart/' + proId,
        method: 'POST',
  
        success: (response) => {
          if (response.status) {
            swal({
            icon: 'success',
            title: 'Item added to cart!',
            showConfirmButton: false,
            timer: 1500
          }).then(()=>{
            location.reload();
          });
            
          }
        }
      })
  }
  
    }
  
